{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "app",
            "console": "internalConsole",
            "justMyCode": false,
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": false,
        },
        {
            "name": "RAG: Chat",
            "type": "debugpy",
            "request": "launch",
            "module": "run",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "RAG: Cli",
            "type": "debugpy",
            "request": "launch",
            "program": "cli.py",
            "console": "internalConsole",
            "justMyCode": false,
        },
        {
            "name": "RAG: UI",
            "type": "debugpy",
            "request": "launch",
            "module": "chainlit",
            "console": "internalConsole",
            "justMyCode": false,
            "args": [
                "run",
                "ui.py",
                "-w"
            ]
        }
    ]
}